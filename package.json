{
  "name": "cocoon-web",
  "license": "MIT",
  "scripts": {
    "start:admin": "node build/admin-apis/app.js",
    "start:dashboard": "node build/app-apis/app.js",
    "build:dashboard-client": "cd packages/app-client && yarn && yarn run build",
    "build:admin-client": "cd admin-apis/client && yarn && yarn run build",
    "build:services": "tsc --build tsconfig.json",
    "watch:admin": "cd admin-apis && tsc -w",
    "watch:dashboard": "cd app-apis && tsc -w",
    "build": "yarn run build:services && yarn run build:dashboard-client && yarn run build:admin-client",
    "dev": "concurrently -k \"yarn dev:admin-srv\" \"yarn dev:dashboard-srv\" \"yarn dev:admin-client\" \"yarn dev:dashboard-client\"",
    "dev:admin": "concurrently -k \"yarn dev:admin-srv\" \"yarn dev:admin-client\"",
    "dev:dashboard": "concurrently -k \"yarn dev:dashboard-srv\" \"yarn dev:dashboard-client\"",
    "dev:dashboard-srv": "yarn watch:dashboard & nodemon --ignore packages/app-client build/app-apis/app.js",
    "dev:dashboard-client": "cd packages/app-client && yarn &&  env-cmd -f ../../.env yarn dev",
    "dev:admin-srv": "yarn watch:admin & nodemon --ignore admin-apis/client build/admin-apis/app.js",
    "dev:admin-client": "cd admin-apis/client && yarn && env-cmd -f ../../.env yarn start",
    "test": "jest",
    "test:watch": "jest --watch --detectOpenHandles",
    "db:destroy": "knex migrate:rollback --all",
    "db:seed": "knex seed:run",
    "db:migrate": "knex migrate:latest",
    "db:reset": "yarn db:destroy && yarn db:migrate && yarn db:seed",
    "repl": "node --experimental-repl-await -r ts-node/register scripts/repl.ts"
  },
  "nodemonConfig": {
    "ignore": [
      "dist/*",
      "build/packages/admin-client/*",
      "build/packages/app-client/*",
      "packages/*"
    ]
  },
